<div class="container">
  <div class="post-form">
    <!-- <h3 class="form-factor">タイトル</h3>
    <input type="text" class="form-factor"><br>
    <textarea class="form-factor textarea"></textarea>
    <input type="file" class="form-factor">
    <input type="submit" value="投稿"> -->
    <%= form_for @post do |f| %>
      <%= f.text_field :title, class: 'form-factor', placeholder: 'タイトル' %><br>
      <%= f.text_area :body, class: 'form-factor textarea', placeholder: '本文' %><br>
      <!-- 画像フォーム挿入 -->
      <%= f.attachment_field :image, class: 'form-factor' %><br>
      <%= f.submit "保存" %>
    <% end %>
  </div>
</div>
