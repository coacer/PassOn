<!DOCTYPE html>
<html>
  <head>
    <title>PassOn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid header">
          <div class="navbar-header">
      			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
              <span class="sr-only">Toggle navigation</span>
      				<span class="icon-bar"></span>
      				<span class="icon-bar"></span>
      				<span class="icon-bar"></span>
            </button>
            <a class="navbar-brand header-title" href="#">PassOn</a>
          </div>
          <div class="collapse navbar-collapse" id="navbarEexample">
      			<ul class="nav navbar-nav navbar-right">
              <!-- ログイン時 -->
              <% if user_signed_in? %>
        				<li>
                  <%= link_to root_path do %>
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>ホーム
                  <% end %>
                </li>
        				<li>
                  <%= link_to user_path(current_user) do %>
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>マイページ
                  <% end %>
                </li>
                <li>
                  <%= link_to users_path do %>
                    <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>ユーザー一覧
                  <% end %>
                </li>
        				<li>
                  <%= link_to new_post_path do %>
                    <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>投稿
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>ログアウト
                  <% end %>
                </li>
                <!-- ログアウト時 -->
              <% else %>
                <li>
                  <%= link_to new_user_registration_path do %>
                    <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path do %>
                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>ログイン
                  <% end %>
                </li>
              <% end %>
      			</ul>
      		</div>
        </div>
      </nav>
    </header>
    <% if flash[:notice] %>
     <p class="flash"><%= flash[:notice] %></p>
    <% end %>
    <%= yield %>
    <footer>
    </footer>
  </body>
</html>
